{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "outDir": "lib",
        "noEmit": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "downlevelIteration": true,
        "isolatedModules": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "lib"]
}
