{
    "name": "zod-geojson",
    "version": "1.0.0",
    "description": "Zod schemas for GeoJSON",
    "repository": {
        "type": "git",
        "url": "https://github.com/reilem/zod-geojson"
    },
    "author": "Reinert Lemmens",
    "license": "MIT",
    "keywords": [
        "zod",
        "geojson",
        "schema",
        "validation"
    ],
    "packageManager": "pnpm@8.10.4",
    "zshy": "./src/index.ts",
    "main": "./lib/index.js",
    "module": "./lib/index.mjs",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.mjs",
            "require": "./lib/index.js"
        }
    },
    "sideEffects": false,
    "files": [
        "lib",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "jest && pnpm test:esm && pnpm test:cjs",
        "test:esm": "pnpm -C tests/esm-testing i --frozen-lockfile && pnpm -C tests/esm-testing start",
        "test:cjs": "pnpm -C tests/cjs-testing i --frozen-lockfile && pnpm -C tests/cjs-testing start",
        "clean": "rimraf lib",
        "build": "pnpm clean && pnpm zshy",
        "typecheck": "tsc",
        "prettiercheck": "prettier -c .",
        "circularcheck": "madge --circular --extensions ts ./src",
        "checks": "pnpm typecheck && pnpm prettiercheck && pnpm circularcheck && pnpm test"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/geojson": "^7946.0.14",
        "jest": "^29.7.0",
        "madge": "^8.0.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "typescript": "~5.9.2",
        "zod": "~4.1.8",
        "zshy": "^0.4.1"
    },
    "peerDependencies": {
        "zod": ">=3.25.0"
    }
}
